<!DOCTYPE html>
<html>
<head>

    <title>Soccerchat | Login</title>
    <meta charset="utf-8">
    <link href="/css/login.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text.css' />

</head>

<body>

    <div class="container logo-container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="logo-div">
                    <a href="/">Soccerchat</a>
                </h1>
                
            </div>
            <div class="col-md-6 text-right">
                <h2 class="reg-div">
                    <a href="/signup">
                        Register Here
                    </a>
                </h2>
            </div>

        </div>
    </div>

<div id="parallax" class="parallax-image">


    <div class="main">

        <form action="/" method="post">

            <h1>
                Login
            </h1>

            <div class="inset">
                <% if(hasErrors) {%>
                     <div class="alert alert-danger">
                     <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                      <% for(var i = 0; i < messages.length; i++) {%>
                          <%= messages[i] %> <br>
                      <% } %>
                      
                      </div>
                  <% } %>

                  <% if(noErrors) {%>
                    <div class="alert alert-success text-center">
                       <a href="#" class="close" data-dismiss="alert" aria-label="close">
                           &times;
                       </a>
                       <%= success %>

                    </div>
                <% } %>

                  <input type="hidden" name="firstRoom" id="firstRoom" value="FirstRoom">

                <p>
                    <label for="email">EMAIL ADDRESS</label>
                    <input type="text" name="email" placeholder="" />
                </p>
                <p>
                    <label for="password">PASSWORD</label>
                    <input type="password" name="password" placeholder="" />
                </p>

            </div>

            <p class="p-container">
                <span><a href="/forgot_password">Forgot password?</a></span>
                <span><a href="" style="color:white;padding-left:10px;padding-right:10px">|</a></span>
                <span><a href="/signup">Not Yet Register?</a></span>
                <input type="submit" class="login-log" style=" background: #03A9F4; border: #3bb5ec;" value="Login">
            </p>
        </form>
    </div>
  </div>


    <footer class="footer">
      <div class="container">
        <p class="text-muted"> Copyright &copy; Soccerchat - All rights reserved </p>
      </div>
    </footer>


<script src="/assets/js/jquery.1.11.1.min.js"></script>
<script src="/bootstrap.3.3.6/js/bootstrap.min.js"></script>
<!-- <script src="/socket.io/socket.io.js"></script>
<script src="/js/login.js"></script> -->

</body>
</html>