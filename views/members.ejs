            </div>
            
        </div>
        
    </nav>
    
    <div class="container home" style="margin:0 auto">
      
    <div class="row home-row">
        
        <div class="col-lg-12 displayText">
            <h2>Members</h2>
        </div>
        
        <div class="col-xs-12 col-sm-4 col-md-3 " id="side_bar" role="navigation" >
           <div class='thumb-nail' style='border:none; padding-top:5px;'>
                <form method="POST" class="form-horizontal" id="" action="">
                    <h2>Filter</h2>
                    
                    <div class="form-group">
                        <div class="col-sm-12">
                            <select name="gender" id="gender" class="form-control">
                               <option value="">Filter By Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>

                            <div class=" panel_footer">
                            <button id="apply" class="">Filter By Gender</button>
                        </div>
                        </div>
                    </div>
                    
                    <div class="form-group" style="margin-top:35px;">
                        <div class="col-sm-12">
                            <select name="club" id="club" class="form-control">
                               <option value="">Filter By Club</option>
                                <% data.forEach(function(val){ %>
                                    <option value="<%= val.club %>"><%= val.club %></option>
                                <% }) %>
                            </select>

                            <div class="panel_footer">
                                <button id="apply" class="">Filter By Clubs</button>
                            </div>
                        </div>
                    </div>
                    
                    
               </form>
            </div>
        </div>
  	
        <div class="col-xs-12 col-sm-4 col-md-9 clubsDisplayDiv" id="">
            <div class="col-xs-12">
               <% if(data.length > 0) {%>
                <% for(var i = 0; i < data.length; i++) {%>
                    <form action="/members" method="post" id="members">
                        <div class="col-md-4 col-sm-6">
                            <div class="panel panel-default text-center" style="padding-bottom:10px;">
                               <a href="/profile/<%= data[i].username %>">

                                <div class="panel-heading">
                                    <img src="/profileImages/<%= data[i].userImage %>" class="panelImage">
                                </div>
                                <div class="panel-body" style="padding-bottom: 7px;">
                                    <h4><%= data[i].username %></h4>
                                    <span><%= data[i].club %></span>
                                    
                                    <input type="hidden" name="id" id="id" value="<%= data[i]._id %>" class="form-control">
                                    <input type="hidden" name="clubName" id="club_Name" value="<%= data[i].club %>" class="form-control">

                                </div>
                                </a>

                            </div>
                        </div>
                    </form>
                <% } %>
                <% } else { %>
                    <h2>No records found</h2>
                <% } %>
            </div>
            
        </div>
  </div>
  
</div>
    
